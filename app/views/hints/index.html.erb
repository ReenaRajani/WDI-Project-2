<p id="notice"><%= notice %></p>

<h1>Listing Hints</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Word</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hints.each do |hint| %>
      <tr>
        <td><%= hint.name %></td>
        <td><%= link_to hint.word.name, word_path(@word) %></td>
        <td><%= link_to 'Show', word_hint_path(@word, hint) %></td>
        <td><%= link_to 'Edit', edit_word_hint_path(@word, hint) %></td>
        <td><%= link_to 'Destroy', word_hint_path(@word, hint), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hint', new_word_hint_path %>
