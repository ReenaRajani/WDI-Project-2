<% if @current_user %>

<div id="main">

</div>


<% else %>

<h1> Please sign-in to take part in the drawesomeness that is drawesome.</h1>

<% end %>

<script id="preGameTemplate" type="template/text">
	<div class="container waitingViewWrapper">
	  <div id="waitingView" class="content">
	    <h2>WAITING TO PLAY</h2> 
	    <div id="playerTiles" class="list-container "></div>
		<button id="playerReady" class="btn startBtn"> Ready </button>
		<button id="playerCancel" class="btn startBtn  hidden">Cancel</button>
	  </div>
	</div>
</script>

<script id="preGamePlayerTemplate" type="template/text">
<div class="playerTile clearfix">
	<section id="playerName" class="attribute">{{username}}</section> 
	<section id="playerState" class="attribute">{{state}}</section>
</div>
</script>

<script id="chatBoxTemplate" type="text/template">
  <div id="chatbox" class="chatWrapper">
    <div id="messageDisplay">
    </div>
    <div id="chatMsgSubmit" class="chatBoxSubmission full-width">
      <input id="messageField"  class="textField" type="text" placeholder="lets chat" autofocus>
      <button type="submit" id="chat">Chat</button>
    </div>
  </div>
</script>

<script id="guessSubmitTemplate" type="text/template">
  <div id="guessSubmit" class="chatBoxSubmission full-width">
    <input id="guess" class="textField" type="text" placeholder="submitguess">
    <button type="submit" id="submitresult">Submit</button>
  </div>
</script>

<script id="canvasTemplate" type="template/text">
	<canvas id="drawsomeCanv" class="canvas" resize></canvas>
</script>

<script id="drawerToolsTemplate"  type="template/text">
<div id="drawerTools" class="toolsWrap">
	<div class="color black"></div>
	<div class="color green"></div>
	<div class="color red"></div>	
	<div class="color blue"></div>
	<div class="tool strokeWidth">SW</div>
	<input class="hidden" id="strokeWidth" type="range" min="1" value="1" max="10">
</div>
</script>


<script id="chatBoxTemplate" type="template/text">
	<div class="chatBoxWrapper">
		<div class="chatBox"></div>
		<textarea class="typeBox"></textarea>
	</div>
</script>

<script id="scoresListTemplate" type="template/text">
	<div class="modalWrap">
		<div id="roundSummary" class="modal">
			<div id="scoresList" class="wrapper">
			</div>
		</div>
	</div>
</script>
<script id="scoreTileTemplate" type="template/text">
	<div class="scoreTiles">
		<section>{{username}}</section>
		<section>{{guess}}</section>
		<section>{{score}}</section>
	</div>
</script>




