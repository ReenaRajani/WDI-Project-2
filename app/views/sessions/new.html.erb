<section class="formTable">
  <div class="formWrapper">
    <h2>LOGIN</h2>

    <%= form_tag '/login' do %>
        <%= text_field_tag 'username', nil, :placeholder=>"username", :class=>'full-width' %>
        <%= password_field_tag 'password', nil , :placeholder=>'password', :class=>'full-width' %>
        <%= check_box "remember_me", "validated", :class=>'inline-block' %><span>Remember me.</span>
        <%= submit_tag 'Login', :class=>'btn btn-submit full-width'%>
    <% end %>

    <%= link_to 'Sign Up', new_user_path %>
  </div>
</section>