<h2>LOGIN</h2>

<%= form_tag '/' do %>
  <p>
    <%= label_tag 'username' %>
    <%= text_field_tag 'username' %>
  </p>
  <p>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </p>
  <p>
    <%= label_tag 'Login' %>
    <%= submit_tag 'Login' %>
  </p>
<% end %>

<%= link_to 'Sign Up', new_user_path %>